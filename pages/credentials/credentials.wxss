
.text {
  font-size: 30rpx;
  color: #333;
  margin: 50rpx 0 30rpx;
  font-weight: bold;
}
.text label{
  font-weight: normal
}
.text1 {
  font-size: 30rpx;
  color: #333;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
  display: flex;
}
.account{
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1) ;
  border-radius:10rpx; 
  padding: 30rpx 0;
}
.text2 {
  font-size: 30rpx;
  color: #333;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  margin-left: 60rpx;
  display: flex;
  font-weight: bold;
}
.text1 label{
  width: 120rpx;
  line-height: 100rpx;
}
.text1 label,.input_text{
  vertical-align: middle;
}
.images_box {
  position: relative;
}
.images{
  display: flex;
  flex-flow: wrap;
}
.page {
  width: 100%;
  height: 100%;
  background: #fff;
}

.gb {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 170rpx;
  top: 0rpx;
  z-index: 9999;
}

.input_text {
  height: 100rpx;
  border-radius: 10rpx;
}

.box {
  margin: 30rpx;
}

.text_label {
  color: #b3b3b3;
  font-size: 24rpx;
}

.img {
  width: 160rpx;
  height: 160rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
}

.text_area {
  width: 640rpx;
  padding-top: 30rpx;
  padding-right: 50rpx;
  min-height: 120rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  text-indent: 30rpx;
}

.button {
  width: 94%;
  height: 88rpx;
  background: #ff6046;
  color: white;
  margin: 60rpx auto 30rpx;
  text-align: center;
  border-radius: 12px;
  line-height: 88rpx;
  font-weight: bold;
}

.title {
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  margin-top: 60rpx;
}
.text3{
  color: #FF5445;
  font-size: 28rpx;
  margin-left: 60rpx;
  margin-bottom: 120rpx;
}
.xz_button{
  width: 210rpx;
  height: 68rpx;
  border-radius: 17px;
  border: 1px solid #F0F0F0;
  text-align: center;
  line-height: 68rpx;
  color: #333333;
  background: #F0F0F0;
  font-size: 26rpx;
  margin-right: 30rpx;
}
.xz_button2{
  background: #FFEEEC;
  border: 1px solid #FF5445;
  color: #FF5445;
  font-weight: bold;
}
.xz{
  display: flex;
}
.ts{
  color: #FF5445;
  background: #ffeeec;
  font-size: 24rpx;
  border-radius: 16px;
  height: 62rpx;
  line-height: 62rpx;
  text-indent: 40rpx;
  margin-top: 50rpx;
}