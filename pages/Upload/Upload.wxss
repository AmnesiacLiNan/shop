/* pages/Upload/Upload.wxss */
page{
  background: white !important;
  width: 100%;
  height: 100%;
}
.box{
  width: 86%;
  margin: 74rpx auto;
  background: white;
}
.box_input{
  display: flex;
  height: 118rpx;
  line-height: 118rpx;
  font-size: 30rpx;
  color: #333333;
  border-bottom:1px solid #f5f5f5; 
}
.box_input label{
  width: 140rpx;
}
.box_input input{
  margin-left: 40rpx;
  margin-top: 40rpx;
}

.button{
  margin-top: 176rpx;
  background: #FF5445;
  border-radius: 22px;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  color: white;
  font-weight: bold;
  font-size: 30rpx;
}
.show{
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.show2{
position: absolute;
z-index: 9999;
background: white;
border-radius: 10px;
width: 50%;
height: 260rpx;
left: 25%;
top: 30%;
}
.bot{
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  bottom: 0;
  border-top: 1px solid #f5f5f5;
  color: #FF5445;
  font-weight: bold;
  font-size: 32rpx;
  z-index: 5
}
.tit{
  font-size: 28rpx;
  text-align: center;
  height: 300rpx;
  line-height: 200rpx;
  font-weight: bold;
}